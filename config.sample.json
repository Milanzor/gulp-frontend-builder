{
    "scss": {
        "source": [
            "../scss/**/*.scss",
            "../../cakephp/app/Plugin/Appo/Assets/scss/**/*.scss"
        ],
        "target": "../../private_html/css/",
        "file_ext": ".min.css",
        "style": "compressed",
        "directory-chmod": "0777",
        "chmod": {
            "owner": {
                "read": true,
                "write": true,
                "execute": false
            },
            "group": {
                "read": true,
                "write": true,
                "execute": false
            },
            "others": {
                "read": true,
                "write": false,
                "execute": false
            }
        }
    },
    "js": {
        "app": {
            "source": [
                "../js/app/**/*.js"
            ],
            "target": "../../private_html/js/app/","directory-chmod": "0777",
            "chmod": {
                "owner": {
                    "read": true,
                    "write": true,
                    "execute": false
                },
                "group": {
                    "read": true,
                    "write": true,
                    "execute": false
                },
                "others": {
                    "read": true,
                    "write": false,
                    "execute": false
                }
            }
        },
        "vendors": {
            "order": [
                "jquery.js",
                "*"
            ],
            "target": "../../private_html/js/",
            "directory-chmod": "0777",
            "chmod": {
                "owner": {
                    "read": true,
                    "write": true,
                    "execute": false
                },
                "group": {
                    "read": true,
                    "write": true,
                    "execute": false
                },
                "others": {
                    "read": true,
                    "write": false,
                    "execute": false
                }
            }
        },
        "manual-vendor-installation-path": [
            "../vendors/manual/**/*.js"
        ],
        "lib": {
            "source": [
                "../js/lib/**/*.js",
                "../../cakephp/app/Plugin/Appo/Assets/js/lib/**/*.js"
            ],
            "order": [
                "Lib.js",
                "*"
            ],
            "target": "../../private_html/js/",
            "directory-chmod": "0775",
            "chmod": {
              "owner": {
                "read": true,
                "write": true,
                "execute": false
              },
              "group": {
                "read": true,
                "write": true,
                "execute": false
              },
              "others": {
                "read": true,
                "write": false,
                "execute": false
              }
            }
        }
    },
    "bower": [
        "../../cakephp/app/Plugin/Appo/Assets/",
        "../"
    ],
    "fonts": {
        "manual-vendor-installation-path": [
            "../vendors/manual/**/*.{svg,eot,ttf,woff,woff2}"
        ],
        "target": "../../private_html/fonts/",
        "chmod": "664"
        "directory-chmod": "0775",
        "chmod": {
            "owner": {
                 "read": true,
                 "write": true,
                 "execute": false
             },
             "group": {
                 "read": true,
                 "write": true,
                 "execute": false
             },
             "others": {
                 "read": true,
                 "write": false,
                 "execute": false
             }
         }
    },
    "debug": true,
    "polling": true
}

